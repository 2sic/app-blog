@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;

@{
  var post = DynamicModel.Post;
  var author = post.author;
}

@* Post title *@
@Tag.Custom(DynamicModel.HeadingType).Class("mt-3").Wrap(Tags.Nl2Br(post.Title))

<div class="details">
  @* Author Info & Link to Authors Posts *@
  <div class="person">
    <a href='@Tags.SafeUrl(Link.To(parameters: "author=" + author.FullName))'>
      @if(Text.Has(author.Image)) {
        <img src='@Link.Image(author.Image, Settings.Images.Author)' alt="@author.FullName" style="width: 40px"/>
      } else {
        @author.FullName
      }
    </a>
  </div>

  @* Post Date *@
  <time pubdate datetime='@post.PublicationMoment.ToString("d")'>@post.PublicationMoment.ToString("d")</time>

  @* List categories of post *@
  @foreach(var category in post.Categories) {
    <a class="category" href='@Tags.SafeUrl(Link.To(parameters: "category=" + category.Key))' title="@category.Name">
      @category.Name
    </a>
  }
</div>