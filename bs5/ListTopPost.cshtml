@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@{
  // Prepare helpers
  var links = CreateInstance("./helpers/Links.cs");
  var listHelpers = CreateInstance("./helpers/Helpers.cs");

  // This config is for the toolbar used on an item.
  var postToolbar = Kit.Toolbar.Empty()
    .Edit()
    .New("BlogPost")
    .Delete();
}
@* If no Details-page is configured, show warning to Admin *@
@if (Edit.Enabled && !Text.Has(Settings.DetailsPage)) {
  <div class="alert alert-danger" role="alert">@Html.Raw(@Resources.LabelAdminDetailPageWarning)</div>
}

<section class="app-blog5" @Kit.Toolbar.Default(Content)>
  <h1 class="category-header mb-4">@Content.Title</h1>

  @* List the posts in 3 columns *@
  <div class="row">
    @foreach (var post in AsTypedList(Data["Posts"])) {
      <article class="app-blog5-list-item col-12 col-md-6 col-lg-4 mb-5" @postToolbar.For(post)>
        @* Image of the post *@
        @Html.Partial("./parts/MainImage.cshtml", new { post, Settings = "BlogCards" })

        <h4>@post.String("Title")</h4>
        <p>@Html.Raw(listHelpers.BuildTeaser(post))</p>

        <a href="@links.LinkToDetailsPage(post)" class="btn btn-outline-primary stretched-link mt-2">@Resources.ReadMore</a>
      </article>
    }
  </div>

  @* Show pagination if configured *@
  @if (Content.ShowPagination == true) {
    @Html.Partial("./parts/ListPaging.cshtml")
  }
</section>

@Html.Partial("./parts/Assets.cshtml")
