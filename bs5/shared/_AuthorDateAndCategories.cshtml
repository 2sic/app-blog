@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@{
  var post = DynamicModel.Post;
  var author = post.author;
  var publicationDate = post.PublicationMoment.ToString("d");
}

@* Post title *@
@Tag.Custom(DynamicModel.HeadingType).Class("mt-3").Wrap(Tags.Nl2Br(post.Title))

<div class="post-meta d-flex align-items-center flex-row my-3" itemscope itemtype="http://schema.org/BlogPosting">
  @* Author Info & Link to Authors Posts *@
  <div class="post-author me-2">
    <a href='@Link.To(parameters: "author=" + author.FullName)'>
      @if(Text.Has(author.Image)) {
        @Kit.Image.Picture(author.Field("Image"), settings: Settings.Images.Author, imgAlt: author.FullName, imgClass:"rounded-circle author-img");
      } else {
        @author.FullName
      }
    </a>
  </div>

  @* Post Date *@
  <time itemprop="datePublished" datetime='@post.PublicationMoment.ToString("yyyy-MM-dd")'>@publicationDate</time>

  @* List categories of post *@
  @foreach(var category in post.Categories) {
    <span>&nbsp;â€“
    <a class="post-category" href='@Link.To(parameters: "category=" + category.Key)' title="@category.Name">
      @category.Name
    </a>
    </span>
  }
</div>