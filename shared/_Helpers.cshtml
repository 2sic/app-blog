@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;

@functions {
  /**
  * Generate the query string for the detail link of a post, preserving current filter parameters
  */
  public string DetailPageQueryString(dynamic post) {
    return "details=" + post.UrlKey;
  }

  /**
  * Returns a safe url to a post details page
  */
  public dynamic LinkToDetailsPage(dynamic post) {
    var detailsPageTabId = Text.Has(App.Settings.DetailsPage)
      ? int.Parse((AsEntity(App.Settings).GetBestValue("DetailsPage")).Split(':')[1])
      : Dnn.Tab.TabID;

    return Tags.SafeUrl(Link.To(pageId: detailsPageTabId, parameters: DetailPageQueryString(post)));
  }
}
